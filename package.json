{
  "name": "nexus-typeorm-plugin",
  "description": "Create schemas from TypeORM models easily with this nexus plugin. Comes with dataloader!",
  "version": "0.0.1-alpha.12",
  "main": "./dist/index.js",
  "private": false,
  "typings": "./dist/index.d.ts",
  "repository": "github:vinpac/nexus-typeorm-plugin",
  "author": "Vinicius Pacheco <vin175pacheco@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "graphql",
    "typeorm",
    "nexus",
    "dataloader"
  ],
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/graphql": "^14.2.0",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/jest": "^24.0.18",
    "@types/mkdirp": "^0.5.2",
    "@types/pluralize": "^0.0.29",
    "@types/prettier": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "add": "^2.0.6",
    "core-js": "^3.6.4",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.3.0",
    "graphql": "^14.3.0",
    "graphql-tools": "^4.0.5",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.3.0",
    "mkdirp": "^0.5.1",
    "mysql": "^2.17.1",
    "pg": "^7.11.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typeorm": "^0.2.20",
    "typescript": "^3.7.2"
  },
  "scripts": {
    "prettier": "prettier --write \"{src,test,examples}/**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "test": "jest --runInBand",
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit && tsc --noEmit -p tsconfig.build.json",
    "prepublishOnly": "rm -rf dist && yarn build"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "graphql-iso-date": "^3.6.1",
    "nexus": "^0.12.0-beta.13",
    "pluralize": "^8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && yarn test && lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
